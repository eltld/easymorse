<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res/com.easymorse"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="wrap_content">

	<com.easymorse.LabelView android:background="@drawable/red"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		app:text="红色" />

	<com.easymorse.LabelView android:background="@drawable/blue"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		app:text="蓝色" app:textSize="20dp" />

	<com.easymorse.LabelView android:background="@drawable/green"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		app:text="绿色" app:textColor="#ffffffff" />
</LinearLayout>
